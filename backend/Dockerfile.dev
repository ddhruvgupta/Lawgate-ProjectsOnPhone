FROM mcr.microsoft.com/dotnet/sdk:10.0
WORKDIR /app

# Copy csproj files and restore
COPY LegalDocSystem.Domain/LegalDocSystem.Domain.csproj LegalDocSystem.Domain/
COPY LegalDocSystem.Application/LegalDocSystem.Application.csproj LegalDocSystem.Application/
COPY LegalDocSystem.Infrastructure/LegalDocSystem.Infrastructure.csproj LegalDocSystem.Infrastructure/
COPY LegalDocSystem.API/LegalDocSystem.API.csproj LegalDocSystem.API/

RUN dotnet restore LegalDocSystem.API/LegalDocSystem.API.csproj

# Copy everything else
COPY . .

# Build the application
RUN dotnet build LegalDocSystem.API/LegalDocSystem.API.csproj -c Debug --no-restore

# Set working directory to API project
WORKDIR /app/LegalDocSystem.API

# Expose port
EXPOSE 8080

# Run the application
CMD ["dotnet", "run", "--no-build", "--no-restore", "--urls", "http://0.0.0.0:8080"]
